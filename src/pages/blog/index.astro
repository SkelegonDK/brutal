---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Default.astro';
import BlogList from '@components/blog/BlogList.astro';

const posts = await getCollection('blog').then((collection) =>
  collection.reverse()
  
);
---

<Layout
  title='Blog'
  description='Brutal Blog | On this page you can find a collection of blogposts'
  pageTitle='Brutal Blog'
>
  <main class='p-6'>
    <video class="video-bg" playsinline autoplay muted loop poster="polina.jpg" id="bgvid">
        
      <source src="/src/assets/sky_pink.mp4" type="video/mp4">
    </video>
    <BlogList posts={posts} />
  </main>
</Layout>
